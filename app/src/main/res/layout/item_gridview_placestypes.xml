<?xml version="1.0" encoding="utf-8"?>
<com.operontech.maroon.layout.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:orientation="vertical"
                                                   android:padding="16dp"
                                                   android:background="@drawable/background_gridview_card">


    <TextView android:id="@+id/item_gridview_placetype_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:gravity="center"
              android:text="null"
              android:textSize="16sp"
              tools:ignore="HardcodedText"/>

    <ImageView android:id="@+id/item_gridview_placetype_image"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_above="@id/item_gridview_placetype_text"
               android:scaleType="fitCenter"
               app:srcCompat="@drawable/ic_action_home"
               android:padding="32dp"
               tools:ignore="ContentDescription"/>

</com.operontech.maroon.layout.SquareRelativeLayout>